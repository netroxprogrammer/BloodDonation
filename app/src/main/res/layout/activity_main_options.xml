<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackGround"
    tools:context="netroxtech.com.bloddonation.Activities.MainOptions">

    <LinearLayout
        android:id="@+id/createAcount_Label"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        >
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/cardColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Option"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="@color/textColor"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_marginTop="25dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_i"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/createAcount_Label"
        />
    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/Sign_up"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:onClick="goSignupActivity"
            android:textSize="30sp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/new_button_shap"
            android:shadowColor="#A83131"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="5"
            />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/login"
            android:text="Login"
            android:layout_below="@+id/Sign_up"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:onClick="goLoginActivity"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/new_button_shap"
            android:shadowColor="#A83131"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="5"
            />
    </RelativeLayout>

</RelativeLayout>
